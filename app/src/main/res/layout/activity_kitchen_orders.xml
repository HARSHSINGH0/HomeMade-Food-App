<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KitchenOrders"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/acme"
        android:text="Add Food"
        android:textSize="30sp"
        android:id="@+id/addFoodTxt"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodContentRelative"
        android:layout_below="@+id/addFoodTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/edt_food"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acme"
            android:hint="Rice"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/limit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/edt_food"
            android:fontFamily="@font/acme"
            android:text="limit: "
            android:textSize="25sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/limit_txt"
            android:fontFamily="@font/acme"
            android:hint="100"
            android:textSize="25sp" />


    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodContentRelative"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:backgroundTint="@color/InactiveBottomNavIconColor2"
        android:layout_marginTop="10dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <RelativeLayout
        android:id="@+id/foodRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/txt_foodTiming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acme"
            android:text="Food Timing: "
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/spinner_food_timing_activity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/txt_foodTiming"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/txt_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_foodTiming"
            android:fontFamily="@font/acme"
            android:text="Date: "
            android:textSize="30sp" />


        <Button
            android:id="@+id/save_button_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Date"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/activeBottomNavIconColor2"
            android:fontFamily="@font/acme"
            android:text="Save"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/save_button_order"
            android:layout_below="@+id/spinner_food_timing_activity"
            android:layout_toRightOf="@+id/txt_Date"
            android:ems="10"
            android:inputType="date" />


    </RelativeLayout>


</RelativeLayout>
